// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  role        String       @default("teacher")
  assessments Assessment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Question {
  id          Int          @id @default(autoincrement())
  subject     String
  topic       String
  level       String
  question    String
  options     String       // JSON stringified array of options
  answer      String
  assessments Assessment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Material {
  id        Int      @id @default(autoincrement())
  title     String
  class     String
  subject   String
  type      String   // pdf, video, image
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Schedule {
  id        Int      @id @default(autoincrement())
  title     String
  date      DateTime
  startTime String
  endTime   String
  location  String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Assessment {
  id         Int      @id @default(autoincrement())
  studentId  Int
  questionId Int
  answer     String
  score      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  student    User      @relation(fields: [studentId], references: [id])
  question   Question  @relation(fields: [questionId], references: [id])
}